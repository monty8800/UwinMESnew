<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorHint">@color/alpha_gray</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!--<item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <!--&lt;!&ndash; 关闭ActionBar &ndash;&gt;-->
        <!--<item name="windowActionBar">false</item>-->
        <!--&lt;!&ndash; 隐藏title &ndash;&gt;-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--&lt;!&ndash; 窗口背景颜色 &ndash;&gt;-->
        <!--<item name="android:windowBackground">@android:color/white</item>-->
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:width">24dp</item>
        <item name="android:height">24dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="OverflowButtonStyle">
        <item name="android:src">@mipmap/info</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>

    </style>

    <style name="ToolBarTitleTextStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/font_big_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ConditionEditText">
        <item name="android:background">@drawable/search_round_bg</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">flagNoExtractUi|actionNext</item> <!--设置键盘弹出时不遮盖全屏-->
        <item name="android:paddingLeft">@dimen/dim5dp</item>
        <item name="android:paddingRight">@dimen/dim5dp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
